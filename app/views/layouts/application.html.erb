<!DOCTYPE html>
<html>
  <head>
    <title>Jacob's Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Jacob's Blog", :posts, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "Blog Posts", :posts %></li>
          <li><%= button_to "Edit Profile", edit_user_registration_path, method: :get, class: "navbar-btn btn btn-primary" %></li>
          <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "navbar-btn btn btn-danger" %></li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <% if user_signed_in? %>
        <div class="pull-right">
          <p>Welcome, <%= current_user.username %>!</p>
          <%= render 'layouts/current_avatar' %>
        </div>
      <% end %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
